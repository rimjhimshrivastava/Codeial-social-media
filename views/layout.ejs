<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- open-source link for NOTY -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    
    <link rel="stylesheet" href="/css/layout.css">

    <%- style %>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('_header'); -%>

    <!-- <% if(flash.success && flash.success.length>0){ %><h5><%= flash.success %></h5><% } %> -->

    <!-- this body will contain the variable part for every page -->
    <%- body %>

    <%- include('_footer'); -%>
    <script src="https://kit.fontawesome.com/133845b97a.js" crossorigin="anonymous"></script>
    <script>
        <% if(flash.success && flash.success.length>0){ %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>
        <% if(flash.error && flash.error.length>0){ %>
            new Noty({
                theme: 'relax',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 1500
            }).show();
        <% } %>
    </script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <%- script %>

</body>

</html>